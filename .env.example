# Database Configuration
DATABASE_URL=postgresql://flow_user:flow_password@localhost:5432/flow_db

# Application Settings
APP_NAME=Flow - Cross-Border FX Payment Platform
ENVIRONMENT=development
DEBUG=True

# Security
SECRET_KEY=your-secret-key-here-change-in-production

# FX Provider (Fixer.io)
# Get your free API key at https://fixer.io/product (100 requests/month free)
# Leave empty to use mock provider for testing
FX_PROVIDER_API_KEY=your-fixer-io-api-key
FX_PROVIDER_API_URL=http://data.fixer.io/api
FX_MARKUP_PERCENTAGE=0.005

# Payment Provider (Sandbox)
PAYMENT_PROVIDER_API_KEY=your-payment-api-key
PAYMENT_PROVIDER_API_URL=https://sandbox.payment-provider.com/api

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@flow-payments.com

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
